{
  "name": "Bit Now",
  "description": "the bitcoin's price now",
  "version": "1.0",

  "manifest_version": 2,

  "background": {
    "page": "popup.html"
  },

  "browser_action": {
    "default_title": "点击查看最新行情",
    "default_icon": "image/bitcoin-icon.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "notifications",
    "http://fonts.googleapis.com/",
    "https://www.okcoin.com/",
    "https://data.btcchina.com/",
    "http://data.mtgox.com/",
    "https://btc-e.com/",
    "http://www.btctrade.com/"
  ]
}